<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#90000000"
        android:gravity="center">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:background="@drawable/endcall_bg"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="앱을 종료하시겠습니까?"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2.05">

                <TextView
                    android:id="@+id/tv_backpressed_yes"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="네"
                    android:textColor="#1f7ffb"
                    android:textSize="26dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.05"
                    android:background="@drawable/end_call_hline" />

                <TextView
                    android:id="@+id/tv_backpressed_no"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="아니요"
                    android:textColor="#1f7ffb"
                    android:textSize="26dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>