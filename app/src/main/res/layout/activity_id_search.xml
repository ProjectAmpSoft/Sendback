<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 전체 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/id_search_bg"
        android:orientation="vertical"
        android:weightSum="18">

        <!-- 상단 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="아이디를 찾을 수 있습니다"
                    android:textColor="#cdcecf"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 중,하단 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="vertical"
            android:weightSum="12">

            <!-- 중단 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="4.5">

                <!-- 뒤로이동 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_id_search_back"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뒤로 이동"
                            android:textColor="#575862"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/join_line_img" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 여백 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">

                </LinearLayout>

                <!-- 이메일 입력 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_id_search_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="이름을 입력해 주세요"
                        android:inputType="text"
                        android:minLines="1"
                        android:textColor="#bebebf"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/join_line_img" />

                </LinearLayout>

                <!-- 휴대전화 입력 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3.5">

                        <EditText
                            android:id="@+id/et_id_search_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="휴대전화 번호를 입력해 주세요"
                            android:inputType="text"
                            android:minLines="1"
                            android:textColor="#bebebf"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_id_search_sms_send"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/id_search_phone_btn_bg"
                            android:gravity="center"
                            android:text="확인" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/join_line_img" />

                </LinearLayout>

                <!-- 인증번호 입력 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3.5">

                        <EditText
                            android:id="@+id/et_id_search_acode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="인증번호를 입력해 주세요"
                            android:inputType="text"
                            android:minLines="1"
                            android:textColor="#bebebf"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_id_search_sms_config"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/id_search_phone_btn_bg"
                            android:gravity="center"
                            android:text="확인" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/join_line_img" />

                </LinearLayout>

            </LinearLayout>

            <!-- 하단 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_id_search_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/id_search_btn_bg"
                    android:gravity="center"
                    android:text="아이디 찾기"
                    android:textColor="#414148"
                    android:textColorHint="#bebebf"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>