<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/viewflipper_memo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/iv_memo1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/memo_img1" />

        <ImageView
            android:id="@+id/iv_memo2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/memo_img2" />

        <ImageView
            android:id="@+id/iv_memo3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/memo_img3" />

        <ImageView
            android:id="@+id/iv_memo4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/memo_img4" />
    </ViewFlipper>

</LinearLayout>