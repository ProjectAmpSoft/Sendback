<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search_select_all"
        android:background="#90000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/search_finish"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/search_select_bg"
                android:weightSum="2.01"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search_id_search"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="아이디 찾기"
                    android:textColor="#1f7ffb"
                    android:textSize="26dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.01"
                    android:background="@drawable/search_select_line" />

                <TextView
                    android:id="@+id/tv_search_pw_search"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="비밀번호 찾기"
                    android:textColor="#1f7ffb"
                    android:textSize="26dp"  />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>